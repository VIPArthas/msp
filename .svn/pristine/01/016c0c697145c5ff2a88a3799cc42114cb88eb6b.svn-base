#container { padding:80px
}
 

/* @group Glyphs */

#glyph_chart div{
	background-color: #fff;
	color: black;
	float: left;
	font-size: 44px;
	height:80px;
	line-height: 60px;
	margin: 5px;
	text-align: center;
	width: 110px;
	position: relative;
	color:#333
 
}

#glyph_chart div p {
	position: absolute;
	left: 0;
	bottom: 0;
	display: block;
	text-align: center;
	font: bold 9px Arial, sans-serif;
	background-color:#999;
	width: 100%;
	color: #fff;
	padding: 4px 0;
	margin-bottom:0
}


#glyphs h1 {
	font-family: Arial, sans-serif;
}
/* @end */

/* @group Installing */

#installing {
	font: 13px Arial, sans-serif;
	 background:#fff; 
	 font-family:"微软雅黑"
}

#installing p,
#glyphs p{
	line-height: 1.2em;
	margin-bottom: 18px;
	font: 13px Arial, sans-serif;
	 font-family:"微软雅黑"
}



#installing h3{
	font-size: 15px;
	margin-top: 18px;
}


<script src="../../js/move.js" type="text/javascript" charset="utf-8"></script>
<script type="text/javascript">
	//上下滑动控件
	$("#leftList,#rightlist").move({
		width: 0,
		height: $(window).height()-200,
		x: false,
		y: true
	});
	$(function () {
		$('.Slide li').on('click', function () {
			$(this).addClass('on').siblings().removeClass('on');
		})
		$('#suo-content').bind('input onpropertychange', function () {
			if ($(this).val()) {
				$('.quxiao').css('display', 'inline-block');
			} else {
				$('.quxiao').css('display', 'none');
			}
		});
		$('.quxiao').click(function () {
			$('#suo-content').val('');
			$(this).css('display', 'none');
		});
		$('.tittle_main span').on('click', function () {
			window.location.href = 'someone-message.html';
		})
	});
</script>
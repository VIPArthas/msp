	<!-- 随手拍首页展示 -->  
    <select id="showList" resultType="java.util.Map" >
    	SELECT 
  t.*,
  TIMESTAMPDIFF(HOUR,t.create_time,NOW()) hournum,
  ma.file_path 
FROM
  (SELECT 
    mu.`name`,
    mu.avatar,
    mp.* 
  FROM
    `msp_photo` mp 
    LEFT JOIN msp_user mu 
      ON mp.`user_id` = mu.`id` 
      <if test="type==1">
      ORDER BY pageview_num DESC
      </if>
      <if test="type==2">
      ORDER BY create_time DESC
      </if>
   ) t 
  LEFT JOIN msp_attachements ma 
    ON t.id = ma.link_id 
GROUP BY t.id 
  
  	</select>
  
  	<!-- 根据 photo主键id 获取 photo及user 信息 -->  
    <select id="getShowInfoByPhotoId" resultType="java.util.Map" parameterType="java.lang.String" >
SELECT 
  mu.name,
  mu.`avatar`,
  (TIMESTAMPDIFF(HOUR, mp.create_time, NOW())+1) hournum,
  mp.* 
FROM
  msp_photo mp 
  LEFT JOIN msp_user mu 
    ON mp.`user_id` = mu.id 
WHERE mp.id = #{photoId,jdbcType=VARCHAR};	
  
  	</select>
  	
  	
  <!-- 浏览数加一 -->	
  <update id="updatePageviewNum" parameterType="java.lang.String" >
  		UPDATE `msp_photo` SET pageview_num=pageview_num+1 WHERE id=#{photoId,jdbcType=VARCHAR};	
  </update>
  	
  	
  

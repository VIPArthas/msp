input,textarea{font-size: 13px !important;}
.btn_bg,.btn_bg_f{width:88%;height:36px;color:#fff;font-size: 14px;line-height:36px;text-align: center;display: block;margin: 10px auto;box-sizing: border-box;border-radius: 5px;}
.btn_green{background-color: #4cb0ff;}
input[type=datetime-local]{margin-right:0px;}
input[readonly]{color:#888}
em{font-style: normal}
.box{padding:0 1vw;background-color: white;}
.content{position: relative;font-size: 13px;overflow-x:hidden;width: 100%;}
input.disc{-webkit-text-security: disc;text-security:disc;}
a{outline-color: transparent !important;-webkit-tap-highlight-color: transparent;color: #4A4A4A;}
.addimg{opacity: 0;width:100%;height: 100%;position: absolute;left:0;top:0;}
.imglist4{/* padding:5px; */}
.imglist4 img{border:solid 5px #fff;box-sizing: border-box;width:25%}
.imglist3{display: flex;flex-wrap: wrap;font-size: 0;;margin-bottom: 10px;width:100%;background-color: white;clear: both;text-align:left;overflow: hidden}
.imglist3>img,.imglist3 .img,.imglist3>img,.imglist3 .aimg{box-sizing: border-box;width:100%;height:328px!important;display: inline-block;overflow: hidden;color: red;position: relative;float: left;}
.aimg{border: 1px dashed #d8d8d8;}
.imglist3 .img>img{    width: 100%;position: relative;top: 50%;left:50%;-webkit-transform: translate3d(-50%,50%,0);transform: translate3d(-50%,-50%,0);display: inline-block;-webkit-appearance: none;}
.imglist3 .img .del:after{
	content: '\e672';font-family:"iconfont" !important; font-size:20px; font-style:normal;
	  -webkit-font-smoothing: antialiased;   -webkit-text-stroke-width: 0.2px; 
	  -moz-osx-font-smoothing: grayscale;position: absolute;   
	  color: #d8d8d8;
    border-radius: 50%;
    border: 1xp solid #d8d8d8;
    background: #fff;
    line-height: 1;
    top: 1vw;
    right: 1vw;
    color:#ff0000;
    cursor:pointer;
    }
.imglist3 .img>span{display: inline-block;width:100%;text-align: right;position: absolute;top:0;right:0}
.imglist3 .img>span>i{font-size: 50px;color:#aaa;text-align: center;line-height: 75px;}
.imglist3 .aimg>span{display: inline-block;width:100%;text-align: center;height:328px!important;}
.imglist3 .aimg>span>i{font-size: 30px;color:#aaa;vertical-align: middle;line-height:328px!important;}
.imglist3+canvas{display: none}
.clearfix{clear: both ;overflow: hidden;}
.textarea{padding:4vw 2.3vw;resize: none;border:none;line-height:22px;color:#343434;width:100%;box-sizing: border-box;font-family: 微软雅黑;outline: none;height:56vw;}
.tabs .row{line-height:50px; border-bottom:1px solid #eaeaea;}
.tabs .col-md-2{font-family:simhei;color:#1C7ED7;font-size: 15px;font-weight:bold;font-size:21px;}
.upload-button{width:500px;height:328px;margin:60px auto;background-color:#fff;padding:0;position:relative; text-align:center;line-height:328px;}
.upload-button i{font-size:50px;vertical-align:middle!important;}
.upload-button input{opacity:0; cursor:pointer;width:100%;height:328px!important; position:absolute;top:0px;left:0px;z-index:3;}
.ul-text{width:100%;height:100%; position:absolute;top:0px;left:0px;z-index:2;}
#submit{ cursor:pointer;}
#submit:hover,#submit:focus{color:#fff;text-decoration:none;}





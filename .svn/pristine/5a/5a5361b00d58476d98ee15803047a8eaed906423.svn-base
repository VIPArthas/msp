function showLoading() {
    $("body").append('<div class="loading" style="background-color: #eee;opacity: 0.6;width: 100vw;height: 100vh;position: absolute;top: 0;left: 0;">'
        +'<div style="width: 1rem;height: 1rem;position: absolute;top: calc(40% - 0.5rem);left: calc(50% - 0.5rem)">' +
        '<img src="../../img/load1.gif" style="width: 100%;height: 100%;">' +
        '</div></div>');
}
function hideLoading() {
    $('div').remove('.loading' )

}



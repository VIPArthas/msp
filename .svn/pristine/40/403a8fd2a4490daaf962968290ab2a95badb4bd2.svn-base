*{box-sizing: border-box; padding:0; margin:0; list-style: none;font-family: 微软雅黑；}
a { text-decoration:none;}
a:active{-webkit-tap-highlight-color: transparent;}
a:hover{-webkit-tap-highlight-color: transparent;}
input,textarea{outline: none;border: none;font-family: 微软雅黑；}

body{
    margin: 0;
    background-color: #f3f3f3;

}
/*随手拍首页*/
/*大层*/
.container{width:100%;margin: 0 auto;}
/*瀑布流层*/
.waterfall{
    -moz-column-count:2; /* Firefox */
    -webkit-column-count:2; /* Safari 和 Chrome */
    column-count:2;
    -moz-column-gap: 1em;
    -webkit-column-gap: 1em;
    column-gap: 1em;
    margin: 0 2vw;
}
/*一个内容层*/
.item{
    background-color: white;
    margin-bottom:2.8vw;
    width: 45.5vw;
    -moz-page-break-inside: avoid;
    -webkit-column-break-inside: avoid;
    break-inside: avoid;
    box-shadow: 0 0.5vw 1.5vw rgba(200,200,200,0.8);
    border-radius: 6px;
  
}
.item>img{
    width: 100%;

}
p{overflow: hidden;margin: 0;height: 11.4vw}
p img{width: 7.2vw;height: 7.2vw;border-radius: 50%;position: relative;
    top:2vw;margin-right: 2vw}
p span{margin: 0 2vw;line-height: 11.4vw;}
.name{font-size: 3.6vw;color: #333;}
.time{font-size: 3vw;color: #888;float: right;}
header{width: 100%;height: 11vw;display: flex;margin-bottom: 2.8vw;background-color: white;justify-content: space-around}
header div{font-size: 3.3vw;text-align: center;color: #888;line-height: 11vw;width: 26vw;border-bottom: 0.6vw transparent solid}
header .active_type{color: #4cb0ff;border-color: #4cb0ff;}
.icon-xiangji1fill{display:inline-block;border-radius: 50%;width: 17vw;height: 17vw;background-color: #4cb0ff;color: white;font-size: 8vw;line-height: 18vw;text-align: center;position: fixed;right:3vw;bottom: 20vw; }


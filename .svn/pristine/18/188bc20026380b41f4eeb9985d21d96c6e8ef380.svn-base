@charset "utf-8";
/* login page */
html,body{height:100%;min-height:100%;}
.loginbg{background:url(../images/l_bd_bg.jpg) repeat-x #e8f2fb;min-height:555px;}
.login_top{padding:12px 0 0 36px;}
.bgimg{background:url(../images/p_bg.png) no-repeat right bottom;min-height:100%;height:100%;}
.login_bar{background:url(../images/login_bg.png) no-repeat;width:600px;height:352px; position:absolute;top:190px;left:50%;margin-left:-300px;z-index:99;}
.login_c{background:#;width:460px;margin:65px 0 0 95px;}
.login_c h1{color:#3d9be4;font-size:18px;height:24px;line-height:24px;margin-bottom:22px;}
.l_border{border:1px solid #acd6f4;display:inline-block;background:#fff;margin-bottom:17px;*display:inline;*zoom:1;}
.l_border .user_ico,.l_border .pwd_ico{background:url(../images/sys_icon.png) no-repeat;width:24px;height:34px;display:block;float:left;margin-left:5px;_display:inline;}
.l_border .user_ico{ background-position:0 6px;}
.l_border .pwd_ico{ background-position:3px -27px;}
.l_border input{height:34px;line-height:34px;width:245px;}
.code_input input{width:172px; text-indent:0.5em;}
.code_img{margin-left:10px;_display:inline;cursor:pointer;}
.login_btn{position:absolute;left:410px;top:110px;z-index:100;}
.login_btn input.login_sub{width:88px;height:88px;line-height:88px;background:#359af5;color:#fff;font-size:18px;border-radius:5px;}
	public Map<String, Object> xsjfTotal(String xh) {
		Connection connection = null;
		PreparedStatement preparedStatement = null;
		ResultSet resultSet = null;
		Map<String, Object> map = null;
		try {
			connection = JdbcUtils.getConnection();
